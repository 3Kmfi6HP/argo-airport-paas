{
  "setupTasks": ["rm -rf /usr/bin/supervisord"],
  "tasks": {
    "start-app": {
      "name": "Run Dev Server",
      "command": "cd /app && npm run start",
      "preview": {
        "port": 3000,
        "prLink": "direct"
      },
      "runAtStart": true
    },
    "info": {
      "name": "info",
      "command": "printenv && pm2 logs",
      "runAtStart": true
    },
    "pm2-logs": {
      "name": "Run Dev Bash",
      "command": "cd /app && bash",
      "runAtStart": true
    }
  }
}
